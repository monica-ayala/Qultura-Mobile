<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.museum.Museum">

    <ImageView
        android:id="@+id/iv_BgImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <View
        android:id="@+id/overlay_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:background="@color/trans_black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="90dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:civ_border_color="@color/white"
                app:civ_border_width="4dp"
                android:contentDescription="Foto del museo"/>

            <TextView
                android:id="@+id/tv_top_bar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-black"
                android:text=""
                android:textColor="@color/header_text_color"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/direcccion_icon"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".7"
                    android:src="@drawable/ubi_icon" />

                <TextView
                    android:id="@+id/tv_direccion_museo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="6dp"
                    android:layout_weight=".3"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/header_text_color"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_horario_museo"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight=".5"
                    android:background="#802B2727"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="--:--"
                    android:textAlignment="center"
                    android:textColor="@color/header_text_color"
                    android:textSize="15sp" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/verSalasBtn"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/transparent"
                android:backgroundTint="@color/transparent"
                android:text="Ver Salas"
                android:textAlignment="viewStart"
                android:textSize="20dp"
                android:fontFamily="sans-serif"
                android:layout_marginHorizontal="15dp"
                android:drawableRight="@drawable/rightarrow"
                android:textAllCaps="false"
                android:contentDescription="Ver Salas"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/white" />
            <TextView
                android:id="@+id/tv_musDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="6dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/header_text_color"
                android:textSize="13sp" />


        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/solicitudBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_button"
        android:text="Solicitud de Recorrido"
        android:textAllCaps="false"
        android:textColor="@color/header_text_color"
        android:contentDescription="Realizar solicitud"/>


</RelativeLayout>