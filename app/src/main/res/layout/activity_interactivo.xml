<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/buttonRamp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="76dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:src="@drawable/ic_baseline_elevator_24"
        android:text="Rampa"
        android:textColor="#616161"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonStairs"
        app:layout_constraintEnd_toStartOf="@+id/buttonElevator"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonStairs" />

    <Button
        android:id="@+id/buttonElevator"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginEnd="50dp"

        android:layout_marginBottom="77dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOffices"
        app:layout_constraintEnd_toStartOf="@+id/buttonRestrooms"
        android:backgroundTint="@android:color/holo_green_light"
        />


    <Button
        android:id="@+id/buttonRestrooms"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="Button"

        app:layout_constraintBaseline_toBaselineOf="@+id/buttonElevator"
        app:layout_constraintStart_toStartOf="@+id/buttonReception"
        android:backgroundTint="@android:color/holo_green_light"/>

    <Button
        android:id="@+id/buttonStairs"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="245dp"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonOffices"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@android:color/holo_green_light"/>

    <Button
        android:id="@+id/buttonOffices"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="63dp"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/buttonReception"
        app:layout_constraintStart_toEndOf="@+id/buttonStairs"
        android:backgroundTint="@android:color/holo_green_light"/>

    <Button
        android:id="@+id/buttonReception"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="179dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonOffices"
        android:backgroundTint="@android:color/holo_green_light"/>

    <TextView
        android:id="@+id/textView"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginBottom="49dp"
        android:fontFamily="sans-serif-black"
        android:text="Seleccione el lugar a destacar:"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:textSize="25sp"
        android:typeface="sans"
        app:icon="@android:drawable/ic_dialog_alert"
        app:layout_constraintBottom_toTopOf="@+id/buttonRamp"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>