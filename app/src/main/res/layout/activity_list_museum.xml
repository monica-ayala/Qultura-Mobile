<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.museum.ListMuseum">

    <TextView
        android:id="@+id/tvMuseum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="MUSEOS"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:layout_marginRight="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map_icon"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvMuseum"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
        android:id="@+id/carouoselRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMuseum" />

    <TextView
        android:id="@+id/tvDescubre"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="DESCUBRE"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carouoselRV"/>

    <Button
        android:id="@+id/event_btn"
        android:layout_width="170dp"
        android:layout_height="350dp"
        android:layout_marginRight="180dp"
        android:backgroundTint="@color/green_qro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescubre"/>

    <Button
        android:id="@+id/guias_btn"
        android:layout_width="170dp"
        android:layout_height="175dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/event_btn"
        app:layout_constraintTop_toBottomOf="@id/tvDescubre" />

    <Button
        android:id="@+id/conf_btn"
        android:layout_width="170dp"
        android:layout_height="175dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/secondary_color"
        app:layout_constraintStart_toEndOf="@id/event_btn"
        app:layout_constraintTop_toBottomOf="@id/guias_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>




